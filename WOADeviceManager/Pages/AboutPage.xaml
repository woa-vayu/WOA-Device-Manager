                            <Hyperlink NavigateUri="https://github.com/WOA-Project/AndroidDebugBridge/blob/main/LICENSE">license</Hyperlink>
                            <Run Text=")" />
                            <LineBreak />
                            <Run Text="FastBoot by WOA Project (" />
                            <Hyperlink NavigateUri="https://github.com/WOA-Project/FastBoot/blob/main/LICENSE">license</Hyperlink>
                            <Run Text=")" />
                            <LineBreak />
                            <Run Text="UnifiedFlashingPlatform by WOA Project (" />
                            <Hyperlink NavigateUri="https://github.com/WOA-Project/UnifiedFlashingPlatform/blob/main/LICENSE">license</Hyperlink>
                            <Run Text=")" />
