                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Source="ms-appx:///Assets/AppTiles/AppLogo.png" Margin="-10,-12,0,0" Width="140" />
                    <RichTextBlock Grid.Column="1" Margin="20,0,0,0">
                        <Paragraph>
                            <Run Text="WOA Device Manager" FontSize="24" FontWeight="SemiBold" />
                            <LineBreak />
                            <Run x:Name="VersionRun" Text="Version {0}.{1}.{2}.{3}" />
                            <LineBreak />
                            <Run Text="Copyright Â© 2023 - 2024, WOA Project" />
                            <LineBreak />
                            <LineBreak />
                            <Run Text="This software uses the following libraries:" />
                            <LineBreak />
                            <LineBreak />
                            <Run Text="WinUSBNet by Thomas Bleeker (" />
                            <Hyperlink NavigateUri="http://opensource.org/licenses/mit-license.php">license</Hyperlink>
                            <Run Text=")" />
                            <LineBreak />
                            <Run Text="DiscUtils by Kenneth Bell (" />
                            <Hyperlink NavigateUri="https://github.com/DiscUtils/DiscUtils/blob/master/LICENSE.txt">license</Hyperlink>
                            <Run Text=")" />
                            <LineBreak />
